<h1><%= "#{@applicant.name}'s application page" %></h1>
<p><%= @applicant.name %></p>
<p><%= @applicant.street_address %></p>
<p><%= @applicant.city %></p>
<p><%= @applicant.zipcode %></p>
<p><%= @applicant.description %></p>
<div class="search-pet">
  <h2>Search for a pet name</h2>
  <%= form_with url: "/applications/#{@applicant.id}?search=pet_name", method: :get, local: true do |f| %>
  <%= f.label :pet_name %>
  <%= f.text_field :pet_name %>
  <%= f.submit "Search" %>
  <% end %>
</div>
  <% if @pets != nil %>
    <% @pets.each do |pet| %>
      <p><%= pet.name %>
      <%= link_to "Adopt #{pet.name}", "/applications/#{@applicant.id}/#{pet.id}/petapplications" %></p>
    <% end %>
  <% end %>
  <% @applicant.pets.each do |pet| %>
  <p>Applied for: <%= pet.name %></p>
  <% end %>
<% if @applicant.pets.count > 0 %>
    <div class="submit-pet">
      <%=  form_with url: "/applications/#{@applicant.id}", method: :post, local: true do |f| %>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.submit "Submit your application" %>
      <% end %>
    </div>
  <% end %>

<p>Your Application is: <%= @applicant.status%></p>
