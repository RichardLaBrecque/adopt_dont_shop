
<%= form_with url: '/applications', method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :street_address %>
  <%= form.text_field :street_address %>
  <%= form.label :city %>
  <%= form.text_field :city %>
  <%= form.label :zipcode %>
  <%= form.text_field :zipcode %>
  <%= form.hidden_field :description, :value => " " %>
  <%= form.hidden_field :status, :value => "In Progress" %>
  <%= form.submit 'Submit' %>
<% end %>
